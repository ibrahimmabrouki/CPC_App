<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <!-- Delete Icon -->
    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_delete"
        app:tint="@color/red" />

    <!-- Doctor's Name -->
    <TextView
        android:id="@+id/tv_doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dr. Ibrahim Mabrouki"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/btn_delete"
        android:layout_marginEnd="8dp" />

    <!-- Record Type -->
    <TextView
        android:id="@+id/tv_record_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type: Consultation"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/tv_doctor_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp" />

    <!-- Record Date -->
    <TextView
        android:id="@+id/tv_record_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 2025-04-24"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/tv_record_type"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp" />

    <!-- Record Time -->
    <TextView
        android:id="@+id/tv_record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: 10:30 AM"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/tv_record_date"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp" />

    <!-- Record Content (Toggled View) -->
    <TextView
        android:id="@+id/tv_record_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_below="@id/tv_record_time"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:text="Content goes here..." />

    <!-- View Record Button -->
    <Button
        android:id="@+id/btn_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_record_content"
        android:layout_marginTop="12dp"
        android:text="View Record"
        android:backgroundTint="@color/blue"
        android:textColor="@android:color/white" />


</RelativeLayout>
