<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Home_page">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#010C80"
    android:elevation="4dp"
    app:titleCentered="false"
    app:navigationIcon="@android:drawable/ic_menu_help"
    app:navigationIconTint="@android:color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginStart="48dp"
    android:layout_gravity="center_vertical">


            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CarePoint Clinic"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/homeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hero Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="32dp">

                <ImageView
                    android:layout_width="600dp"
                    android:layout_height="250dp"
                    android:src="@drawable/doctor_home"
                    android:scaleType="centerInside"
                     />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Health Is Our Priority"
                    android:textColor="#010C80"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>

            <!-- Quick Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Row 1 -->
                <!-- Row 1 -->
                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/view_doctors"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_button_background"
                        android:drawableTop="@android:drawable/ic_menu_myplaces"
                        android:drawablePadding="8dp"
                        android:drawableTint="@android:color/white"
                        android:gravity="center"
                        android:text="Doctors"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/view_services"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/custom_button_background"
                        android:gravity="center"
                        android:drawableTop="@android:drawable/ic_menu_manage"
                        android:drawablePadding="8dp"
                        android:text="Services"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:drawableTint="@android:color/white" />
                </LinearLayout>

            </LinearLayout>

            <!-- Contact Button -->
            <Button
                android:id="@+id/view_contact"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:text="Contact Us"
                android:textSize="18sp"
                android:textColor="#010C80"
                android:backgroundTint="#E1F0FA"
                android:drawableLeft="@android:drawable/ic_menu_call"
                android:drawablePadding="16dp"
                android:drawableTint="@android:color/white"/>

            <!-- Login Button -->
            <Button
                android:id="@+id/homepage_login"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:text="Login / Register"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#010C80"
                android:drawableLeft="@android:drawable/ic_lock_lock"
                android:drawablePadding="16dp"
                android:drawableTint="@android:color/white"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>