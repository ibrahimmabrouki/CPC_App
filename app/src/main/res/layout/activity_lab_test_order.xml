<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="24dp"
        android:elevation="4dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Lab Test Order"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/et_patient_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Patient ID"
            android:inputType="number"
            android:backgroundTint="@color/primary_dark"/>

        <EditText
            android:id="@+id/et_test_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lab Test Name"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/primary_dark"/>

        <EditText
            android:id="@+id/et_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reason for Test"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/primary_dark"/>

        <EditText
            android:id="@+id/et_instructions"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Special Instructions"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/primary_dark"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Lab Order"
            android:layout_marginTop="20dp"
            android:onClick="submitLabTestOrder"
            android:backgroundTint="@color/blue"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>
